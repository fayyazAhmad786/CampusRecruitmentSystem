<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_13pxh"
     android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <LinearLayout
        android:id="@+id/linearNotification"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frameStack"
            android:layout_height="@dimen/_40pxv"
            android:layout_marginBottom="@dimen/_27pxv"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_width="@dimen/_40pxh"
            style="@style/groupStylegray_401cornerRadius">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_company_2"
                android:layout_width="@dimen/_41pxh"
                android:layout_height="@dimen/_43pxh"
                android:src="@drawable/img_ellipse"
                tools:ignore="ContentDescription"
                app:civ_border_color="#FF000000"/>
        </FrameLayout>

        <LinearLayout
            android:gravity="start"
            android:id="@+id/linearColumngooglewantto"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="0.87"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notification_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/msg_fiverr_want_to"

                tools:text="@string/msg_fiverr_want_to" />
              <TextView
                android:id="@+id/tv_company_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/lbl_companies"
                tools:text="@string/lbl_companies" />

            <LinearLayout
                android:gravity="start"
                android:id="@+id/linearRowtime"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtTime"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="lbl_12_min_ago"
                    tools:text="@string/lbl_12_min_ago" />

                <View
                    android:background="@drawable/rectangle_bg_indigo_600_radius_4"
                    android:id="@+id/viewEllipse783"
                    android:layout_height="@dimen/_8pxh"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="@dimen/_8pxh" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
