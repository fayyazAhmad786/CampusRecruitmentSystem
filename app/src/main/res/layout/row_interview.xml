<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp">

    <LinearLayout
        android:id="@+id/linearRowthumbsup"
        style="@style/groupStyledeep_purple_200_68cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_candidate"
            android:layout_width="@dimen/_41pxh"
            android:layout_height="@dimen/_43pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginBottom="@dimen/_15pxv"
            android:src="@drawable/img_ellipse"
            app:civ_border_color="#FF000000"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:id="@+id/linearColumnjrexecutiveOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginBottom="@dimen/_14pxv"
            android:layout_weight="0.84"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowjrexecutive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_interview_job_title"
                    style="@style/txtPoppinssemibold14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.68"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_jr_executive"
                    tools:text="@string/lbl_jr_executive" />

                <TextView
                    android:id="@+id/tv_interview_salery_range"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="0.32"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:text="@string/lbl_96_000_y"
                    tools:text="@string/lbl_96_000_y" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowburgerkingg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_interview_email"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="3.5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Send Email"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="Send Email" />

                <ImageView
                    android:id="@+id/img_interview_send_email"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email"
                    android:visibility="visible"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_interview_hire"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Hire"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Hire" />
                <TextView
                    android:id="@+id/tv_hired_reject"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="Reject"
                    android:textStyle="bold"
                    android:textColor="@color/red_A700"
                    tools:text="Reject" />
                <TextView
                    android:id="@+id/tv_hired_accept"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="@dimen/_10pxv"
                    android:singleLine="true"
                    android:gravity="right"
                    android:text="Accept"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    tools:text="Accept" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_joining_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Joining Date"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Joining Date" />

                <TextView
                    android:id="@+id/tv_joining_date"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Date" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>