<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp">

    <LinearLayout
        android:id="@+id/linearRowthumbsup"
        style="@style/groupStyledeep_purple_200_68cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_Job_posted_company"
            android:layout_width="@dimen/_41pxh"
            android:layout_height="@dimen/_43pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginBottom="@dimen/_15pxv"
            android:src="@drawable/img_ellipse"
            app:civ_border_color="#FF000000"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:id="@+id/linearColumnjrexecutiveOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginBottom="@dimen/_14pxv"
            android:layout_weight="0.84"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowjrexecutive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Job_posted_title"
                    style="@style/txtPoppinssemibold14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="3.5"
                    android:layout_gravity="start"
                    android:singleLine="true"
                    android:text="@string/lbl_jr_executive"
                    tools:text="@string/lbl_jr_executive" />

                <TextView
                    android:id="@+id/tv_Job_posted_salery_range"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="1.50"
                    android:layout_gravity="end"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:text="@string/lbl_96_000_y"
                    tools:text="@string/lbl_96_000_y" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowburgerking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4pxv"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tv_Job_posted_company_name"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="3.5"
                    android:layout_gravity="start"
                    android:singleLine="true"
                    android:text="@string/lbl_burger_king"
                    tools:text="@string/lbl_burger_king" />

                <TextView
                    android:id="@+id/tv_Job_posted_location"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="1.50"
                    android:layout_gravity="end"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:text="@string/lbl_los_angels_us"
                    tools:text="@string/lbl_los_angels_us" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearRowdeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4pxv"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Job_posted_application_deadline_text"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="@dimen/_250pxh"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="3"
                    android:layout_gravity="start"
                    android:singleLine="true"
                    android:text="@string/lbl_application_deadline"
                    tools:text="@string/lbl_application_deadline" />

                <TextView
                    android:id="@+id/tv_Job_posted_application_deadline_value"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="@dimen/_150pxh"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:text="@string/lbl_los_angels_us"
                    tools:text="@string/lbl_los_angels_us" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4pxv"
                android:weightSum="5"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_view_resume"
                    style="@style/txtPoppinsregular13_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="3"
                    android:layout_gravity="start|center"
                    android:singleLine="true"
                    android:text="Job Status"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <Button
                    style="@style/txtPoppinsregular13_1_1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="2"
                    android:text="Deactivate"
                    android:layout_gravity="end|center"
                    android:visibility="visible"
                    android:backgroundTint="@color/colorPrimaryDarkred"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>