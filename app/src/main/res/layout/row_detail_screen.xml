<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearRowfortyfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFortyFour"
            android:layout_width="@dimen/_40pxh"
            android:layout_height="@dimen/_40pxh"
            android:background="@drawable/rectangle_bg_bluegray_900_radius_20"
            android:paddingHorizontal="@dimen/_11pxh"
            android:paddingVertical="@dimen/_11pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_44"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linearColumnquestioncounter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="0.82"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtQuestionCounter"
                style="@style/txtUbuntumedium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_10_question"
                tools:text="@string/lbl_10_question" />

            <TextView
                android:id="@+id/txt10pointfora"
                style="@style/txtNunitoregular14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{detailScreenRowModel.txt10pointfora}"
                tools:text="@string/msg_10_point_for_a" />
        </LinearLayout>
    </LinearLayout>
</layout>
