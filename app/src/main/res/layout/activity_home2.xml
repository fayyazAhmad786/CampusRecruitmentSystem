<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.HomeActivity">
    <FrameLayout
        android:id="@+id/frameStackhiree"
        style="@style/groupStylegray_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_18pxh"
        android:layout_marginTop="@dimen/_4pxv"
        android:layout_marginEnd="@dimen/_28pxh">

        <LinearLayout
            android:id="@+id/linearColumnellipse"
            style="@style/groupStylegray_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowhiree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:gravity="end"
                android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtHiree"
                        style="@style/txtPoppinssemibold22_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_9pxh"
                        android:layout_marginEnd="@dimen/_78pxh"
                        android:layout_marginRight="@dimen/_47pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_hiree2"
                        tools:text="@string/lbl_hiree2" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="@dimen/_60pxh"
                    android:layout_height="@dimen/_60pxh"
                    android:src="@drawable/img_ellipse"
                    tools:ignore="ContentDescription"
                    app:civ_border_color="#FF000000"/>




            </LinearLayout>
            <FrameLayout
                android:id="@+id/frameButton"
                style="@style/groupStylepurple_901cornerRadius"
                android:layout_width="@dimen/_150pxh"
                android:layout_height="@dimen/_24pxv"
                android:layout_gravity="center"
                android:onClick="PostJob"
                android:layout_marginTop="@dimen/_13pxv"
              >

                <View
                    android:id="@+id/viewCreatefromfra"
                    android:layout_width="@dimen/_83pxh"
                    android:layout_height="@dimen/_22pxv"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:background="@drawable/rectangle_bg_purple_901_radius_5" />

                <TextView
                    android:id="@+id/txtNext"
                    style="@style/txtPoppinsmedium16_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="top|start"
                    android:singleLine="true"
                    android:text="@string/lbl_post_a_job"
                    tools:text="@string/lbl_post_a_job" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/contentCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_weight="1">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/navigationCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="?android:attr/windowBackground"
                    app:labelVisibilityMode="labeled"
                    app:menu="@menu/menu_company">

                </com.google.android.material.bottomnavigation.BottomNavigationView>
            </FrameLayout>



        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>