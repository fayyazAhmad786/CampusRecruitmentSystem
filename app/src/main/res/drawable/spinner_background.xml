<?xml version="1.0" encoding="utf-8"?><!-- spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color for the spinner -->
            <solid android:color="#FFFFFF" />
            <!-- Border for the spinner -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
            <!-- Rounded corners for the spinner -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Icon -->
    <item
        android:bottom="8dp"
        android:drawable="@drawable/icon_down"
        android:gravity="end|center_vertical"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

</layer-list>

